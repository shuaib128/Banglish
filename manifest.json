{
  "manifest_version": 3,
  "name": "Banglish",
  "version": "1.0",
  "description": "A Chrome Extension to write Bangla with English.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
